{
  "name": "medium-to-markdown",
  "displayName": "Medium to Markdown",
  "description": "Import your Medium posts into your blog",
  "version": "0.1.0",
  "publisher": "moshfeu",
  "engines": {
    "vscode": "^1.4.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "mediumToMarkdown.prompt",
        "title": "Medium to Markdown: Convert Medium post"
      }
    ],
    "configuration": [
      {
        "title": "Download Path",
        "type": "object",
        "properties": {
          "mediumToMarkdown.downloadPath": {
            "type": "string",
            "description": "Path to the folder the posts download to",
            "default": "/",
            "scope": "resource"
          },
          "mediumToMarkdown.frontmatter": {
            "type": "boolean",
            "description": "Whether adding front matter to posts",
            "default": "true",
            "scope": "resource"
          },
          "mediumToMarkdown.fileType": {
            "type": "string",
            "description": "",
            "default": "md",
            "enum": [
              "md",
              "mdx"
            ],
            "scope": "resource"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.38.0",
    "typescript": "^1.8.5",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "mediumexporter": "https://github.com/moshfeu/mediumexporter"
  }
}
